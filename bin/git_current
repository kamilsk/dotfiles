#!/usr/bin/env bash

set -o nounset
set -o pipefail

case "${1-branch}" in
    branch)
        git symbolic-ref --short HEAD
        exit 0
    ;;
    remote)
        remote="$(git rev-parse --abbrev-ref --symbolic-full-name @{u} | awk -F'/' '{print $1}')"
        if [ -z "${remote}" ]; then
            remote="$(git remote | grep origin | head -1)"
        fi
        if [ -z "${remote}" ]; then
            remote="$(git remote | head -1)"
        fi
        if [ -z "${remote}" ]; then
            echo no remote found, see '`git remote`'
            exit 1
        fi
        echo $remote
        exit 0
    ;;
    *)
        echo nothing to do
        exit 1
    ;;
esac
