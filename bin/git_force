#!/usr/bin/env bash

set -o nounset
set -o pipefail

case "${1-all}" in
    all)
        if [ $(git remote | wc -l) = 0 ]; then
            (>&2 echo nothing to do)
            exit 1
        fi
        for remote in $(git remote | grep -v upstream); do
            git push -f "${remote}" "$(git current)"
        done
    ;;
    current)
        remote="$(git current remote)"
        if [ -z "${remote}" ]; then
            (>&2 echo nothing to do)
            exit 1
        fi
        git push -f "${remote}"
    ;;
    *)
        (>&2 echo nothing to do)
        exit 1
    ;;
esac

echo done
exit 0
