#!/usr/bin/env bash

set -o nounset
set -o pipefail

# Deprecated: legacy
git config --unset --global alias.m
git config --unset --global alias.mm
git config --unset --global alias.mmm
echo run '`git config --unset alias.flow`' in legacy projects

git config --global alias.aliases   '!git config --get-regexp alias | git_aliases'

# метаинформация
git config --global alias.user      'config user.email'
git config --global alias.current   '!git_current'
git config --global alias.default   '!git_default'
git config --global alias.release   '!git describe --tags | cut -d - -f 1'
git config --global alias.stats     '!git_stats'
git config --global alias.day       '!git log --oneline --no-merges --all --author=$(git user) --since=1.day   | bat'
git config --global alias.week      '!git log --oneline --no-merges --all --author=$(git user) --since=1.week  | bat'
git config --global alias.month     '!git log --oneline --no-merges --all --author=$(git user) --since=1.month | bat'

git config --global alias.st        'status --short --branch'
git config --global alias.branches  'for-each-ref --sort=committerdate refs/heads/ --format="%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))"'
git config --global alias.commits   'log --oneline --graph'
git config --global alias.last      '!last() { git log --pretty=oneline | head -${1-1}; }; last'
git config --global alias.grog      'log --graph --abbrev-commit --decorate --all --format=format:"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)"'

# процессы
git config --global alias.flow      '!git_flow'
git config --global alias.it        '!git init && git cmm root --allow-empty'

git config --global alias.cmm       '!commit() { git commit -m "$*"; }; commit'
git config --global alias.commend   'commit --amend --no-edit'
git config --global alias.undo      '!undo() { git reset --soft HEAD^${1-1}; }; undo'

git config --global alias.refresh   '!git_refresh'
git config --global alias.shake     '!git_shake'
git config --global alias.untag     '!git_untag'

git config --global alias.force     '!git_force'
git config --global alias.please    '!git_please'

git config --global alias.stsh      'stash --keep-index'
git config --global alias.staash    'stash --include-untracked'
git config --global alias.staaash   'stash --all'

# TODO refactor it
git config --global alias.attach    "!branch=\$(git branch | cut -f2 -d' ' | awk 'NF > 0'); attach() { git branch --set-upstream-to=\$1/\$branch \$branch; }; attach"
git config --global alias.up        '!git pull --all --prune --tags --force --rebase && git submodule update --init --recursive' # g+
git config --global alias.down      '!git reset --hard && git clean -df && git submodule deinit --all'                           # g-
git config --global alias.sync      "!git pull --all --prune --tags --force --rebase && for remote in \$(git remote | grep -v upstream); do git push \$remote \$(git current) --tags; done"

echo done
exit 0
