#!/usr/bin/env bash

set -o nounset
set -o pipefail

(
    cd "${HOME}"/.dotfiles
    git pull
)

if [ -n "${ZSH}" ] && [ -f "${ZSH}"/tools/upgrade.sh ]; then
    env ZSH="${ZSH}" sh "${ZSH}"/tools/upgrade.sh
fi

if command -v brew > /dev/null; then
    echo 'TODO brew+'
fi

if command -v docker > /dev/null; then
    echo 'TODO images+'
fi

exec $SHELL
