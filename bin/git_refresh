#!/usr/bin/env bash

set -o nounset
set -o pipefail

current="$(git current)"
default="$(git default)"

if [ "${current}" = "${default}" ]; then
    git pull --all --prune --tags --force --rebase && git submodule update --init --recursive # g+
    exit $?
fi

if $(git rev-parse --abbrev-ref --symbolic-full-name @{u} > /dev/null 2>&1 ); then
    git pull --all --prune --tags --force --rebase && git submodule update --init --recursive # g+
    exit $?
fi

remote="$(git current remote)"
if [ -z "${remote}" ]; then
    (>&2 echo nothing to do)
    exit 1
fi

base="${remote}/${default}"

git pull --all --prune --tags --force --rebase "${base}"

echo done
exit 0
