#!/usr/bin/env bash

set -o nounset
set -o pipefail

case "${1-all}" in
    all)
        if [ $(git remote | wc -l) = 0 ]; then
            echo nothing to do
            exit 1
        fi
        for remote in "$(git remote | grep -v upstream)"; do
            git push --force-with-lease "${remote}" "$(git current)"
        done
    ;;
    current)
        remote="$(git current remote)"
        if [ -z "${remote}" ]; then
            echo nothing to do
            exit 1
        fi
        git push --force-with-lease "${remote}"
    ;;
    *)
        echo nothing to do
        exit 1
    ;;
esac

echo done
exit 0
